<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foregroundGravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/icon_login_logo" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_login_name"
            android:drawablePadding="@dimen/dp_5"
            android:hint="@string/activity_login_name_tips"
            android:textColorHint="@color/activity_login_line"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_logo"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tx_line_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/activity_login_line"
            app:layout_constraintEnd_toEndOf="@+id/et_name"
            app:layout_constraintStart_toStartOf="@+id/et_name"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_login_pwd"
            android:drawablePadding="@dimen/dp_5"
            android:hint="@string/activity_login_pwd_tips"
            android:inputType="textPassword"
            android:textColorHint="@color/activity_login_line"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tx_line_pwd"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/activity_login_line"
            app:layout_constraintEnd_toEndOf="@+id/et_pwd"
            app:layout_constraintStart_toStartOf="@+id/et_pwd"
            app:layout_constraintTop_toBottomOf="@+id/et_pwd" />

        <TextView
            android:id="@+id/tx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/icon_login_login"
            android:gravity="center"
            android:text="@string/activity_login_login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toTopOf="@+id/tx_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_pwd" />

        <TextView
            android:id="@+id/tx_line"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="wrap_content"
            android:background="@color/activity_login_line"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tx_reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tx_reset" />

        <TextView
            android:id="@+id/tx_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_35"
            android:text="@string/activity_login_reset"
            android:textColor="@color/activity_login_text1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tx_line" />

        <TextView
            android:id="@+id/tx_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/activity_login_register"
            android:textColor="@color/activity_login_text1"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/tx_line"
            app:layout_constraintTop_toTopOf="@+id/tx_reset" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>