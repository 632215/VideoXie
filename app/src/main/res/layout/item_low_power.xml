<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_company_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_v"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_recorder_v"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8"
        android:paddingStart="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_company_title"
        tools:text="全塔设备" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_v"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_v" />

    <TextView
        android:id="@+id/tx_line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_50"
        android:background="@color/color_gray_line"
        app:layout_constraintEnd_toEndOf="@+id/rv_v"
        app:layout_constraintStart_toStartOf="@+id/rv_v"
        app:layout_constraintTop_toBottomOf="@+id/rv_v" />

    <TextView
        android:id="@+id/tx_c"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_recorder_c"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8"
        android:paddingStart="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_line"
        tools:text="综合设备" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_c"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_c" />
</android.support.constraint.ConstraintLayout>