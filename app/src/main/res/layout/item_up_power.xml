<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_province_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_province_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:drawableLeft="@mipmap/icon_city"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8"
        android:paddingStart="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="重庆" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/color_gray_line"
        app:layout_constraintEnd_toEndOf="@+id/tx_province_title"
        app:layout_constraintStart_toStartOf="@+id/tx_province_title"
        app:layout_constraintTop_toBottomOf="@+id/tx_province_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_company"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_province_title" />
</android.support.constraint.ConstraintLayout>